@model Car
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<hr />
<div class="row">
    <div class="col-12">
        <h3>Last car added</h3>
        @if (Model != null)
        {
            <partial name="_CarPartialView" model="Model" />
        }
        else
        {
            <p>No cars has bin added</p>
        }
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h3>Look up a Car by it id</h3>
        <input type="number" id="carIdInput" value="1" />
        <a class="btn btn-info"
           asp-controller="Cars"
           asp-action="AjaxFindById"
           data-target="enviroment-container"
           onclick="findById(event, '@Url.Action("AjaxFindById","Cars")')">Find by id</a>

        <div id="enviroment-container"></div>
    </div>
</div>
<script src="~/js/CarsUtil.js" asp-append-version="true"></script>