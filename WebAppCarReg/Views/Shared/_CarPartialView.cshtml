@model Car

<div class="row">
    <div class="col">
        <p>@Model.Brand</p>
    </div>
    <div class="col">
        <p>@Model.ModelName</p>
    </div>
    <div class="col">
        <p>@Model.Year</p>
    </div>
    <div class="col">
        <a class="btn btn-danger" asp-action="Delete" asp-controller="Cars" asp-route-id="@Model.Id">Delete</a>
    </div>
</div>