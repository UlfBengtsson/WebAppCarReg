@model WebAppCarReg.Models.Car

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>

    <div class="row">
        <h5>Sales history</h5>
        <ul>
            @foreach (var item in Model.SalesHistory)
            {
                <li>@item.TransactionDate.ToShortDateString() - @item.Seller sells to @item.Buyer</li>
            }
        </ul>
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
